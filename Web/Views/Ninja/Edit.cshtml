@model Web.ViewModels.Ninja.NinjaViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-4xl mb-2">Edit - @Model.Name</h1>
<div>
    <a class="btn btn-xs btn-secondary" asp-action="Index"><i class="fa-solid fa-arrow-left"></i> Back to List</a>
    <a class="btn btn-xs btn-info" asp-action="Details" asp-route-id="@Model?.Id"><i class="fa-solid fa-pen-to-square"></i> Details</a>
</div>

<hr class="my-2" />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" class="">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Gold" class="control-label"></label>
                <input asp-for="Gold" class="form-control" />
                <span asp-validation-for="Gold" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

